<!-- app/views/sessions/new.html.erb -->
<div class="login-container">
  <h1>Log In to Your Account</h1>

  <%= form_with url: login_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "input-field", placeholder: "Enter your email" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "input-field", placeholder: "Enter your password" %>
    </div>

    <div class="form-group">
      <%= f.submit 'Log In', class: "submit-btn" %>
    </div>
  <% end %>

  <p class="account-text">
    Don't have an account yet?
    <%= link_to 'Sign Up', new_user_path, class: "signup-link" %>
  </p>
</div>
